{
    "name": "note-app",
    "version": "1.0.0",
    "description": "Manage personal notes in a multi-user environment",
    "main": "index.js",
    "scripts": {
        "test": "npm test",
        "prepare": "husky install",
        "lint": "prettier --check .",
        "format": "prettier --config .prettierrc.js --write './**/*.{js,ts,json,yml,yaml}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cherylchua/note-app.git"
    },
    "author": "Cheryl Chua",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/cherylchua/note-app/issues"
    },
    "homepage": "https://github.com/cherylchua/note-app#readme",
    "dependencies": {
        "typescript": "^4.5.5"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "prettier": "2.5.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "echo \"[Husky] pre-commit\" && lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "npm run format"
        ],
        "*.{ts,js}": [
            "eslint"
        ]
    }
}
