{
  "name": "note-app",
  "version": "1.0.0",
  "description": "Manage personal notes in a multi-user environment",
  "main": "app.js",
  "scripts": {
    "test": "npm test",
    "format": "prettier --config .prettierrc.json --write './**/*.{js,ts,json,yml,yaml}'",
    "build": "rm -rf dist && tsc",
    "start": "tsc && node ./dist/server.js",
    "knex:create-migration": "knex migrate:make create_users_and_notes_table -x ts",
    "knex:run-migrations": "knex migrate:latest --knexfile ./src/db/knexfile.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherylchua/note-app.git"
  },
  "author": "Cheryl Chua",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cherylchua/note-app/issues"
  },
  "homepage": "https://github.com/cherylchua/note-app#readme",
  "dependencies": {
    "better-sqlite3": "^7.5.0",
    "body-parse": "^0.1.0",
    "express": "^4.17.2",
    "knex": "^1.0.3",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "2.5.1",
    "ts-node": "^10.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit\" && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run format",
      "npm test"
    ],
    "*.{ts,js}": [
      "eslint"
    ]
  }
}
