{
  "name": "note-app",
  "version": "1.0.0",
  "description": "Manage personal notes in a multi-user environment",
  "main": "server.ts",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "format": "prettier --config .prettierrc.json --write'",
    "build": "rm -rf dist && tsc",
    "start": "NODE_ENV=development tsc && node ./dist/src/server.js",
    "watch": "NODE_ENV=development nodemon src/server.ts",
    "migrate:create": "knex migrate:make create_users_and_notes_table -x ts",
    "migrate:up": "knex migrate:up 20220217000647_create_users_and_notes_table.ts",
    "migrate:down": "knex migrate:down 20220217000647_create_users_and_notes_table.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherylchua/note-app.git"
  },
  "author": "Cheryl Chua",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cherylchua/note-app/issues"
  },
  "homepage": "https://github.com/cherylchua/note-app#readme",
  "dependencies": {
    "better-sqlite3": "^7.5.0",
    "body-parse": "^0.1.0",
    "express": "^4.17.2",
    "express-openapi-validator": "^4.13.5",
    "knex": "^1.0.3",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {}
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run format",
      "npm test"
    ],
    "*.{ts,js}": [
      "eslint",
      "git add ."
    ]
  }
}
